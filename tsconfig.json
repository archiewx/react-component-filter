{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "lib": ["es6", "dom"],
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
